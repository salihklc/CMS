{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "CmsDatabase": "Server=.\\SQLEXPRESS;Database=Cms;Trusted_Connection=True;MultipleActiveResultSets=true",
    "CmsLogDatabase": "Server=.\\SQLEXPRESS;Database=CmsLog;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=.\\SQLEXPRESS;Database=CmsLog;Trusted_Connection=True;MultipleActiveResultSets=true",
          "tableName": "Logs",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "primaryKeyColumnName": "Idx",
            "addStandardColumns": [
              "LogEvent"
            ],
            "id": {
              "columnName": "Idx",
              "nonClusteredIndex": true
            },
            "timeStamp": {
              "columnName": "InsertDate",
              "AllowNull": false
            },
            "messageTemplate": { "columnName": "Template" },
            "customColumns": [
              {
                "ColumnName": "UniqueId",
                "DataType": "nvarchar",
                "DataLength": 50,
                "AllowNull": true
              },
              {
                "ColumnName": "UserName",
                "DataType": "nvarchar",
                "DataLength": 256,
                "AllowNull": true
              },
              {
                "ColumnName": "Application",
                "DataType": "nvarchar",
                "DataLength": 256,
                "AllowNull": true
              },
              {
                "ColumnName": "InsertUserIdx",
                "DataType": "int",
                "DataLength": 50,
                "AllowNull": false
              },
              {
                "ColumnName": "UpdateUserIdx",
                "DataType": "int",
                "DataLength": 50,
                "AllowNull": true
              },
              {
                "ColumnName": "UpdateDate",
                "DataType": "datetime",
                "AllowNull": true
              },
              {
                "ColumnName": "Status",
                "DataType": "int"
              }
            ]
          }
        }
      }
    ]
  }
}
