@model CMS.Common.Models.ViewModels.Tickets.TicketPeoplesModel
<style type="text/css">
    .small-avatar {
        width: 5%;
        margin-right: 5px;
    }
</style>

<div class="row">
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">@SharedLocalizer["People"]</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-md-12">@SharedLocalizer["Assignee"]:</label>

                    </div>
                    <div class="form-group">
                        <label class="col-md-12">@SharedLocalizer["Reporter"]:</label>
                    </div>
                    <div class="form-group">
                        <label class="col-md-8">@SharedLocalizer["Watcher"] :</label>
                       
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <span class="watcher">  <img style="width:5%;margin-right:5px;" src="~/files/img/profile-photos/user.png" /><span>@Model.Assignee.FirstName @Model.Assignee.LastName</span></span>
                    </div>
                    <div class="form-group">
                        <span class="watcher">
                            <img style="width:5%;margin-right:5px;" src="~/files/img/profile-photos/user.png" /><span>@Model.Reporter.FirstName @Model.Reporter.LastName</span>
                        </span>
                    </div>
                           <div class="form-group">
                   
                            @foreach (var person in Model.Watchers)
                            {

                                <span class="watcher pull-right">
                                    <img style="width:5%;margin-right:5px;" src="~/files/img/profile-photos/user.png" /><span>@person.FirstName @person.LastName</span>
                                </span>

                            }
                                         
                     
                    </div>
                   
                </div>
     
            </div>
        </div>
    </div>
</div>

