
<script src="~/js/dataTableInitialize.js"></script>
<script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
@section ExtensionCss{
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css">
}


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@SharedLocalizer["Products"]</h3>
                <div style="float:right;">
                    <a class="btn btn-app pull-right" id="AddBtn" asp-action="AddProduct" asp-controller="Product">
                        <i class="fa fa-plus"></i> @SharedLocalizer["AddProduct"]
                    </a>
                </div>
                <hr>
                <div class="col-md-2">
                    <a type="button" class="btn btn-block btn-default" asp-action="ExportExcel" asp-controller="Product">
                        <i class="fa fa-file-excel-o"></i>
                        @SharedLocalizer["ExportToExcel"]
                    </a>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="box box-primary">
                    <table id="user-table" class="table table-bordered table-striped table-hover default-datatable"
                           data-server-uri='@Url.Action("_ProductsCallBack","Product")'>
                        <thead>
                            <tr>
                                <th data-column="Idx" data-option="U"
                                    data-edit-url='@Url.Action("EditProduct","Product")'
                                    data-default-order="desc">İşlemler</th>
                                <th data-column="Idx" data-individual-search="true">@SharedLocalizer["Id"]</th>
                                <th data-column="Name_TR" data-orderable="false" data-individual-search="true">@SharedLocalizer["Name_TR"]</th>
                                <th data-column="Name_EN" data-orderable="false" data-individual-search="true">@SharedLocalizer["Name_EN"]</th>
                                @*<th data-column="Description_TR" data-orderable="false" data-individual-search="true">@SharedLocalizer["Description_TR"]</th>
                                <th data-column="Description_EN" data-orderable="false" data-individual-search="true">@SharedLocalizer["Description_EN"]</th>*@

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>@SharedLocalizer["Operations"]</th>
                                <th>@SharedLocalizer["Id"]</th>
                                <th>@SharedLocalizer["Name_TR"]</th>
                                <th>@SharedLocalizer["Name_EN"]</th>
                                @*<th>@SharedLocalizer["Description_TR"]</th>
                                <th>@SharedLocalizer["Description_EN"]</th>*@
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

<script type="text/javascript">

</script>