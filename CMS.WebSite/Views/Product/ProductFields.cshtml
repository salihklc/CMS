
@{
    ViewData["Title"] = "ProductFields";
}

<h1>ProductFields</h1>

<form id="create-user-form" asp-controller="Product" asp-action="Create"
      method="post" role="form" class="ajax-form" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-12">

            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">@SharedLocalizer["AccountInfo"] Hesap Bilgileri</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <div class="form-group">
                        <label>@SharedLocalizer["Status"]</label>
                        <select class="form-control select2" style="width: 100%;">
                            <option selected="selected">@SharedLocalizer["Active"]</option>
                            <option>@SharedLocalizer["Passive"]</option>
                        </select>
                    </div>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>

    </div>
    
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-block btn-success btn-flat">@SharedLocalizer["Save"]</button>
        </div>
    </div>
</form>