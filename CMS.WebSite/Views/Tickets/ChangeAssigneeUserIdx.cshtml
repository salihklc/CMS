@model CMS.Common.Models.ViewModels.Tickets.TicketAssigneeModel


<form id="change-assignee-form" asp-controller="Tickets" asp-action="ChangeAssigneeUserIdx"
      method="post" role="form" class="ajax-form" data-isModal="true">
    <div class="row">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">@SharedLocalizer["ChangeAssignee"]</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <label>@SharedLocalizer["Description"]</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control wysihtml5" })
                    @Html.ValidationMessageFor(x => x.Description)
                </div>

                <div class="form-group">
                    <label>@SharedHtmlLocalizer["AssignUser"]</label>
                    <select asp-for="AssigneeUserIdx" class="form-control select2-ajax-data" data-url="@Url.Action("GetTicketUsers","General")" style="width: 100%;"></select>
                    @Html.ValidationMessageFor(x => x.AssigneeUserIdx)
                </div>
                <div class="form-group">
                    @Html.HiddenFor(x => x.TicketIdx)
                    @Html.HiddenFor(x => x.UserIdx)
                    <button type="submit" class="btn btn-block btn-success">@SharedLocalizer["Save"]</button>
                </div>
            </div>
        </div>
    </div>
</form>