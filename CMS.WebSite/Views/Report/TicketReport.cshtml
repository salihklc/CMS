@model CMS.Common.Models.ViewModels.Firms.FirmTicketFilterModel
<script src="~/js/dataTableInitialize.js"></script>
<script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
@section ExtensionCss{
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css">
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@SharedLocalizer["FirmTickets"]</h3>

                <hr>
                <div class="col-md-2">
                    <a type="button" class="btn btn-block btn-default" asp-action="ExportTicketTypesExcel" asp-controller="Report">
                        <i class="fas fa-file-excel"></i>
                        @SharedLocalizer["ExportToExcel"]
                    </a>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="box box-primary">
                    <table id="user-table" class="table table-bordered table-striped table-hover default-datatable"
                           data-server-uri='@Url.Action("_FirmTicketsCallBack","Report",
                                           new { FirmIdx = Model.FirmIdx, StartDate = Model.StartDate, EndDate = Model.EndDate , TypeIdx = Model.TypeIdx, TicketNumber = Model.TicketNumber , PriorityIdx = Model.PriorityIdx})'>
                        <thead>
                            <tr>
                                <th data-column="Idx" data-option="C"
                                    data-custom='<a class="btn btn-default btn-md" href="javascript:EditFirm({0})" data-toggle="tooltip" title="@SharedLocalizer["Detail"]"><i class="fa fa-edit"></i> </a>'
                                    data-default-order="desc">İşlemler</th>
                                <th data-column="Idx" data-individual-search="true">@SharedLocalizer["Id"]</th>
                                <th data-column="FirmName" data-orderable="false" data-individual-search="true">@SharedLocalizer["FirmName"]</th>
                                <th data-column="TicketNumber" data-orderable="false" data-individual-search="true">@SharedLocalizer["TicketNumber"]</th>
                                <th data-column="StartDate" data-orderable="false" data-individual-search="true">@SharedLocalizer["StartDate"]</th>
                                <th data-column="PriorityName" data-orderable="false" data-individual-search="true">@SharedLocalizer["PriorityName"]</th>
                                <th data-column="TypeName" data-orderable="false" data-individual-search="true">@SharedLocalizer["TypeName"]</th>
                                <th data-column="Name" data-orderable="false" data-individual-search="true">@SharedLocalizer["Name"]</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>@SharedLocalizer["Operations"]</th>
                                <th>@SharedLocalizer["Id"]</th>
                                <th>@SharedLocalizer["FirmName"]</th>
                                <th>@SharedLocalizer["TicketNumber"]</th>
                                <th>@SharedLocalizer["StartDate"]</th>
                                <th>@SharedLocalizer["PriorityName"]</th>
                                <th>@SharedLocalizer["TypeName"]</th>
                                <th>@SharedLocalizer["Name"]</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>