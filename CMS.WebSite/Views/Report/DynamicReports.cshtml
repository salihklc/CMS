@model CMS.Common.Models.ViewModels.Reports.DynamicReportModel

<script src="~/js/dataTableInitialize.js"></script>
<script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

@section ExtensionCss{
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css">
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">@SharedLocalizer["DynamicReports"]</h3>

                <hr>
                <div class="col-md-2">
                    <a type="button" class="btn btn-block btn-default" asp-action="ExportTicketTypesExcel" asp-controller="Report">
                        <i class="fas fa-file-excel"></i>
                        @SharedLocalizer["ExportToExcel"]
                    </a>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="box box-primary">
                    <table id="user-table" class="table table-bordered table-striped table-hover default-datatable"
                           data-server-uri='@Url.Action("_DynamicReportCallBack","Report")'>
                        <thead>
                            <tr>
                                <th data-column="Idx" data-option="CU"
                                    data-custom='<a class="btn btn-default btn-md" href="javascript:RunSql({0})" data-toggle="tooltip" title="@SharedLocalizer["RunSql"]"><i class="fa fa-caret-square-o-right"></i> </a>'
                                    data-default-order="desc">İşlemler</th>
                                <th data-column="Idx" data-individual-search="true">@SharedLocalizer["Id"]</th>
                                <th data-column="ReportName" data-orderable="true" data-individual-search="true">@SharedLocalizer["ReportName"]</th>
                                <th data-column="Description" data-orderable="true" data-individual-search="true">@SharedLocalizer["Description"]</th>
                                <th data-column="ReportSql" data-orderable="true" data-individual-search="true">@SharedLocalizer["ReportSql"]</th>
                                <th data-column="Parameters" data-orderable="true" data-individual-search="true">@SharedLocalizer["Parameters"]</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>@SharedLocalizer["Operations"]</th>
                                <th>@SharedLocalizer["Id"]</th>
                                <th>@SharedLocalizer["ReportName"]</th>
                                <th>@SharedLocalizer["Description"]</th>
                                <th>@SharedLocalizer["ReportSql"]</th>
                                <th>@SharedLocalizer["Parameters"]</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<div class="sqlReport" id="sql-report">

</div>